<!DOCTYPE html>
<html>
<head>
  <title>Productos</title>
  <link rel="stylesheet" href="/bootstrap/css/bootstrap.min.css">
  <link rel="stylesheet" href="/datatables/datatables.min.css">
</head>
<body>
  <div class="container">
    <h1>Productos</h1>
    <form action="/productos/create" method="POST">
      <div class="mb-3">
        <label for="descrip" class="form-label">Descripción</label>
        <input type="text" class="form-control" id="descrip" name="descrip" required>
      </div>
      <div class="mb-3">
        <label for="stock" class="form-label">Stock</label>
        <input type="number" class="form-control" id="stock" name="stock" required>
      </div>
      <div class="mb-3">
        <label for="precio" class="form-label">Precio</label>
        <input type="number" step="0.01" class="form-control" id="precio" name="precio" required>
      </div>
      <button type="submit" class="btn btn-primary">Crear Producto</button>
    </form>
    <hr>
    <table id="productosTable" class="table table-striped">
      <thead>
        <tr>
          <th>ID</th>
          <th>Descripción</th>
          <th>Stock</th>
          <th>Precio</th>
        </tr>
      </thead>
      <tbody>
        <% productos.forEach(producto => { %>
        <tr>
          <td><%= producto.id %></td>
          <td><%= producto.descrip %></td>
          <td><%= producto.stock %></td>
          <td><%= producto.precio %></td>
        </tr>
        <% }) %>
      </tbody>
    </table>
  </div>
  <script src="/bootstrap/js/bootstrap.bundle.min.js"></script>
  <script src="/datatables/datatables.min.js"></script>
  <script>
    $(document).ready(function() {
      $('#productosTable').DataTable();
    });
  </script>
</body>
</html>
