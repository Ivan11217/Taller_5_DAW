<!DOCTYPE html>
<html>
<head>
  <title><%= title %></title>
  <link rel="stylesheet" type="text/css" href="/stylesheets/style.css">
  <style>
    .lupa {
      cursor: pointer;
    }
    table {
      width: 100%;
      border-collapse: collapse;
    }
    th, td {
      border: 1px solid #ddd;
      padding: 8px;
      text-align: left;
    }
    th {
      background-color: #f4f4f4;
    }
    tr:hover {background-color: #f5f5f5;}
    form {
      display: flex;
      align-items: center;
    }
    input[type="text"] {
      margin-right: 10px;
    }
    .create-button {
      margin-bottom: 10px;
    }
  </style>
</head>
<body>
  <header>
    <h1><%= title %></h1>
  </header>
  <main>
    <div class="create-button">
      <button onclick="window.location.href='/clientes/create'">Crear Cliente</button>
    </div>
    <form action="/clientes/filter" method="get">
      <input type="text" name="nombre" placeholder="Nombre">
      <input type="text" name="apellido" placeholder="Apellido">
      <input type="text" name="cedula" placeholder="Cédula">
      <button type="submit" style="border: none; background: none; padding: 0;">
        <span class="lupa">&#128269;</span> <!-- Lupa en Unicode -->
      </button>
    </form>
    <table>
      <thead>
        <tr>
          <th>Nombre</th>
          <th>Apellido</th>
          <th>Cédula</th>
        </tr>
      </thead>
      <tbody>
        <% clientes.forEach(function(cliente) { %>
          <tr>
            <td><%= cliente.nombre %></td>
            <td><%= cliente.apellido %></td>
            <td><%= cliente.cedula %></td>
          </tr>
        <% }); %>
      </tbody>
    </table>
  </main>
  <footer>
    <p>Mi Aplicación &copy; 2024</p>
  </footer>
</body>
</html>
